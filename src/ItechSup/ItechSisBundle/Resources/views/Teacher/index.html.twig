{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <div class="block-title">
    <h1>Liste de prof</h1>
    </div>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('teacher_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fullName }}</td>
                <td>
                        <a href="{{ path('teacher_show', { 'id': entity.id }) }}"class="button">Afficher</a>

                        <a href="{{ path('teacher_edit', { 'id': entity.id }) }}"class="button">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('teacher_new') }}"class="new-entry button">
                Créer une nouvelle entrée
            </a>
        </li>
    </ul>
    {% endblock %}
