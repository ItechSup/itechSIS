{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <h1>Modification des informations de {{ entity.fullName }}</h1>

    <div id="form">
        {{ form_start(edit_form)}}
        {{ form_errors(edit_form) }}
        <div class="widget">
            <div>
                <label>Nom complet du professeur</label>
            </div>
            {{ form_widget(edit_form.fullName, {'attr': {'class':'form-label'}}) }}
        </div>
        <div class="widget">
            {{ form_widget(edit_form.submit, {'attr': {'class': 'button btn'}}) }}
        </div>
        <hr>
        {{ form_end(edit_form)}}
    </div>

    <a href="{{ path('teacher') }}"class="new-entry button">
        Retour Ã  la liste des profs
    </a>
{% endblock %}
