{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block content %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Nombre de sièges</th>
                <th>Nombre d'ordinateurs</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('room_show', { 'id': entity.id }) }}">{{ entity.number }}</a></td>
                <td>{{ entity.seatsCount }}</td>
                <td>{{ entity.computersCount }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('room_new') }}" class="btn btn-default">Créer une nouvelle entrée</a>
{% endblock %}
