{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <h1>Salle</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Numéro</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Nombre de sièges</th>
                <td>{{ entity.seatsCount }}</td>
            </tr>
            <tr>
                <th>Nombre d'ordinateurs</th>
                <td>{{ entity.computersCount }}</td>
            </tr>
        </tbody>
    </table>

    <table class="record_properties">
        <caption>Listes des events</caption>
        <tr>
            <th>Titre</th>
            <th>Session</th>
            <th>Prof</th>
            <th>Date de début</th>
            <th>Date de fin</th>
        </tr>
        {% for event in entity.events %}
            <tr>
                <td>{{ event.title }}</td>
                <td>{{ event.session.formation.title }}</td>
                <td>{{ event.teacher.fullName }}</td>
                <td>{{ event.startTime|date('d-m-Y ') }}</td>
                <td>{{ event.endTime|date('d-m-Y ') }}</td>
            </tr>
        {% endfor %}
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('room') }}">
            Retour à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('room_edit', { 'id': entity.id }) }}">
            Editer
        </a>
    </li>
    <li>
        {{ form(delete_form) }}
    </li>
</ul>
{% endblock %}
