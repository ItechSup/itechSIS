{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Modifier {{ entity.name }}{% endblock %}

{% block content %}
    <div id="form">
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.openingHour) }}
        {{ form_row(edit_form.closingHour) }}
        <button type="submit" class="btn btn-default">Mettre à jour</button>
        <a class="btn btn-default" href="{{ path('school') }}">Retour à la liste</a>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}