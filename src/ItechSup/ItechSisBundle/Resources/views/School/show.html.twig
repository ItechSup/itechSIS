{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Ecole {{ entity.name }}{% endblock %}

{% block content %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Heure d'ouverture</th>
                <td>{{ entity.openingHour|date('H:i') }}</td>
            </tr>
            <tr>
                <th>Heure de fermeture</th>
                <td>{{ entity.closingHour|date('H:i') }}</td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
    <a href="{{ path('school_edit', { 'id': entity.id }) }}" class="btn btn-default">Editer</a>
    <button type="submit" class="btn btn-default">Supprimer</button>
    <a href="{{ path('school') }}" class="btn btn-default">Retour</a>
    {{ form_end(delete_form) }}


    <div id="calendar" data-itech-events="/api/calendar/school/{{ entity.id }}"></div>
{% endblock %}
