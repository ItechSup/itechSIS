{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <h1>Liste des écoles</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Heure d'ouverture</th>
                <th>Heure de fermeture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="td-table">{{ entity.name }}</td>
                <td class="td-table">{{ entity.openingHour | date('h-m') }}</td>
                <td class="td-table">{{ entity.closingHour | date('h-m') }}</td>
                <td>
                    <a href="{{ path('school_show', { 'id': entity.id }) }}" class="button">Afficher</a>
                    <a href="{{ path('school_edit', { 'id': entity.id }) }}" class="button">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('school_new') }}" class="new-entry button">
                Ajouter une école
            </a>
        </li>
    </ul>
    {% endblock %}
