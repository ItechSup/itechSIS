{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Liste des écoles{% endblock %}

{% block content %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Heure d'ouverture</th>
                <th>Heure de fermeture</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('school_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.openingHour|date('H:i') }}</td>
                <td>{{ entity.closingHour|date('H:i') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('school_new') }}" class="btn btn-default">Créer une nouvelle entrée</a>
{% endblock %}
