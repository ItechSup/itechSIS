{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/itechsupitechsis/css/Student/student.css') }}" />
    {{ parent() }}
{% endblock %}

{% block header %}
    <h2>STUDENT</h2>
{% endblock %}

{% block content %}
    <div class="block-title">
        <h1>Student List</h1>
    </div>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.surname }}
                <td>
                    <a href="{{ path('student_show', { 'id': entity.id }) }}" class="button">show</a>
                    <a href="{{ path('student_edit', { 'id': entity.id }) }}" class="button">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('student_new') }}"class="new-entry">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}