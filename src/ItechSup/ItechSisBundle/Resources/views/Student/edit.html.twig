{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Modification de {{ entity.name ~ ' ' ~ entity.surname }}{% endblock %}

{% block content %}
    <div id="form">
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.surname) }}
        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.formation) }}
        {{ form_row(edit_form.workplace) }}
        <button type="submit" class="btn btn-default">Mettre à jour</button>
        <a class="btn btn-default" href="{{ path('student') }}">Retour à la liste</a>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
