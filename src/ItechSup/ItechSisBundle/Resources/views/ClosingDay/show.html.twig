{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Fermeture le {{ entity.closingDate|date('d-m-Y') }}{% endblock %}

{% block content %}

    <table class="table">
        <tbody>
        <tr>
            <th>Motif</th>
            <td>{{ entity.reason }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.closingDate|date('d-m-Y') }}</td>
        </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
    <a href="{{ path('closingday_edit', { 'id': entity.id }) }}" class="btn btn-default">Editer</a>
    <button type="submit" class="btn btn-default">Supprimer</button>
    <a href="{{ path('closingday') }}" class="btn btn-default">Retour</a>
    {{ form_end(delete_form) }}

{% endblock %}
