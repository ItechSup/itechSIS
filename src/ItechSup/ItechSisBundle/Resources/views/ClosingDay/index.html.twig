{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Jours de fermeture{% endblock %}

{% block content %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Motif</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('closingday_show', { 'id': entity.id }) }}">{{ entity.reason }}</a></td>
                <td>{{ entity.closingDate|date('d-m-Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('closingday_new') }}" class="btn btn-default">Créer une nouvelle entrée</a>
{% endblock %}
