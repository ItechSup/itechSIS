{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Cursus {{ entity.title }}{% endblock %}

{% block content %}

    <table class="table">
        <tbody>
        <tr>
            <th>Ecole</th>
            <td>{{ entity.school.name }}</td>
        </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
    <a href="{{ path('formation_edit', { 'id': entity.id }) }}" class="btn btn-default">Editer</a>
    <button type="submit" class="btn btn-default">Supprimer</button>
    <a href="{{ path('formation') }}" class="btn btn-default">Retour</a>
    {{ form_end(delete_form) }}


    <div id="calendar" data-itech-events="/api/calendar/formation/{{ entity.id }}"></div>

{% endblock %}