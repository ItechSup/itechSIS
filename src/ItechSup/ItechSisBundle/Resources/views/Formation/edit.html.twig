{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <h1>Edition de la formation {{ entity.title }}</h1>

    <div id="form">
        {{ form_start(edit_form)}}
        {{ form_errors(edit_form) }}
        <div class="widget">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(edit_form.title, {'attr': {'class': 'form-label'}}) }}
        </div>
        <div class="widget">
            <div>
                <label>Nom de l'ecole</label>
            </div>
            {{ form_widget(edit_form.school, {'attr': {'class': 'form-label select'}}) }}
        </div>
        <div class="widget">
            {{ form_widget(edit_form.submit, {'attr': {'class': 'button btn'}}) }}
        </div>
        <hr>
        {{ form_end(edit_form)}}
    </div>

    <a href="{{ path('formation') }}" class="new-entry button">
        Retour Ã  la liste des formations
    </a>
{% endblock %}
