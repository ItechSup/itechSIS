{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <h1>Création de formation</h1>

    <div id="form">

        {{ form_start(form)}}
        {{ form_errors(form) }}
        <div class="widget form-title">
            <div class="label">
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.title,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget form-school">
            <div class="label">
                <label>Nom de l'ecole</label>
            </div>
            {{ form_widget(form.school, {'attr': {'class': 'form-label select'}}) }}
        </div>
        <div class="widget form-submit">
            {{ form_widget(form.submit, {'attr': {'label':'Mettre à jour','class': 'button update'}}) }}
        </div>
        <hr>
        {{ form_end(form)}}
    </div>

    <ul class="record_actions">
        <li>
            <a href="{{ path('formation') }}" class = "update button">
                Retour à la liste des formations
            </a>
        </li>
    </ul>
{% endblock %}
