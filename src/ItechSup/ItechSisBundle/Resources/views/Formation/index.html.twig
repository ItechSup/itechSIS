    {{ parent() }}
{% endblock %}

{% block content%}
    <h1 class="block-title">Formation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Session</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.title  }}</a></td>
                <td>{{ entity.title }}</td>
                <td>
                        <a href="{{ path('formation_show', { 'id': entity.id }) }}"class="button">show </a>
                        <a href="{{ path('formation_edit', { 'id': entity.id }) }}"class="button">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('formation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
