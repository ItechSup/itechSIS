{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block title %}Liste des cursus{% endblock %}

{% block content %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('formation_new') }}" class="btn btn-default">Créer une nouvelle entrée</a>
{% endblock %}
