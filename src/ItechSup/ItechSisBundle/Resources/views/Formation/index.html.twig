{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/itechsupitechsis/css/Formation/formation.css') }}" />
    {{ parent() }}
{% endblock %}

{% block content%}
    <div class="block-title">
        <h1>Formation List</h1>
    </div>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Session</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.title  }}</a></td>
                <td>{{ entity.title }}</td>
                <td>
                    <a href="{{ path('formation_show', { 'id': entity.id }) }}"class="button">show </a>
                    <a href="{{ path('formation_edit', { 'id': entity.id }) }}"class="button">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">
        Create a new entry
    </a>
    {% endblock %}
