{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content%}
    <h1 class="block-title">Création de session</h1>

    <div id="form">
        {{ form_start(form)}}
        {{ form_errors(form) }}
        <div class="widget">
            <div>
                <label>Date de début</label>
            </div>
            {{ form_widget(form.startDate, {'attr': {'class': 'form-label'}}) }}
        </div>
        <div class="widget">
            <div>
                <label>Date de fin</label>
               </div>
            {{ form_widget(form.endDate, {'attr': {'class': 'form-label'}}) }}
        </div>
        <div class="widget">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.formation) }}
        </div>
        <div class="widget">
            {{ form_widget(form.submit, {'attr': {'class': 'button btn'}}) }}
        </div>
        <hr>
        {{ form_end(form)}}
    </div>

    <a href="{{ path('formation') }}" class = "new-entry button">
        Retour à la liste des sessions
    </a>
{% endblock %}
