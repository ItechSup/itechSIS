{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content %}
    <h1>Ajout d'un événement pour la session {{ entity.formation.title }}</h1>

    <div id="form">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="widget time">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.startTime,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget time">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.endTime,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.title,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.room,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.session,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget">
            <div>
                <label>Nom de la formation</label>
            </div>
            {{ form_widget(form.teacher,{ 'attr': {'class':'form-label' }}) }}
        </div>
        <div class="widget">
            {{ form_widget(form.submit, {'attr': {'class': 'button btn'}}) }}
        </div>
        <hr>
        {{ form_end(form)}}
    </div>

    <a href="{{ path('session') }}" class="new-entry button">
        Retour à la liste des sessions
    </a>
{% endblock %}