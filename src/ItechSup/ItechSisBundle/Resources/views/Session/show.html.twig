{% extends 'ItechSupItechSisBundle::layout.html.twig' %}

{% block content%}
    <h1 class="block-title">Session</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ entity.formation.title }}</td>
            </tr>
            <tr>
                <th>Début</th>
                <td>{{ entity.startDate|date('d-M-Y') }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ entity.endDate|date('d-M-Y') }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>
                    <a href="{{ path('session_edit', { 'id': entity.id }) }}"class="button">
                        Editer
                    </a>
                    {{ form(delete_form) }}
                </td>
            </tr>
        <tr>
            <th>Event</th>
            <td><a href="{{ path('event_new', { 'id': entity.id }) }}"class="new-entry button">
                    Créer un event pour cette session
                </a></td>
        </tr>
        </tbody>
    </table>
    <a href="{{ path('session_enlist', { 'id': entity.id }) }}"class="new-entry button">
        Voir la liste des étudiants
    </a>

{% endblock %}
